@model IEnumerable<WEB_LAB1.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<style>
    .title_text {
        display: block;
        text-align: center;
    }
</style>

<h1 class="title_text">Замовлення</h1>

<div class="container mt-5">
    <a asp-action="Create" class="btn btn-primary mb-3">Додати замовлення</a>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="bg-info text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редагувати</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детальніше</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Видалити</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

