@model WEB_LAB1.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center mb-5">Детальніше</h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Продукт</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 font-weight-bold">
                    @Html.DisplayNameFor(model => model.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt class="col-sm-2 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dd class="col-sm-10">
                    <img src="@Model.Link" alt="Product Image" class="img-fluid rounded" /> <!-- Відображення картинки з округленими кутами -->
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary mr-2">Редагувати</a>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</div>
